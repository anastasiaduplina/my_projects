<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.example.calendar.CustomCalendarView
        android:id="@+id/custom_calendar_view"
        android:layout_width="411dp"
        android:layout_height="581dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.example.calendar.CustomCalendarView>
    <LinearLayout
        android:layout_width="419dp"
        android:layout_height="52dp"
        android:gravity="fill_horizontal"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="0dp"
        android:theme="?android:attr/buttonBarStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/calendarbutton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/calendar"
            android:textColor="@color/black"
            android:theme="?android:attr/buttonBarButtonStyle"
            app:backgroundTint="@color/green"
            app:layout_constraintBottom_toBottomOf="@+id/piechartbutton"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/piechartbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/piechart"
            android:textColor="@color/black"
            android:theme="?android:attr/buttonBarButtonStyle"
            app:backgroundTint="@color/green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>